<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <TextView
            android:layout_width="317dp"
            android:layout_height="154dp"
            android:text="@string/get_ready"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.154"
            app:layout_constraintHorizontal_bias="0.446" android:gravity="center" android:textSize="18sp"
            android:id="@+id/text1"/>
    <TextView
            android:layout_width="149dp"
            android:layout_height="90dp"
            android:text="climb"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.379"
            app:layout_constraintHorizontal_bias="0.16" android:gravity="center" android:textSize="30sp"
            android:id="@+id/climbCount"/>
    <ListView
            android:layout_width="match_parent"
            android:layout_height="582dp" android:id="@+id/minMax" android:visibility="invisible"
            tools:layout_editor_absoluteX="0dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.496"/>
    <TextView
            android:layout_width="149dp"
            android:layout_height="90dp"
            android:text="step"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.379"
            app:layout_constraintHorizontal_bias="0.801" android:gravity="center" android:textSize="30sp"
            android:id="@+id/stepCount"/>
    <ListView
            android:layout_width="match_parent"
            android:layout_height="575dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:visibility="invisible" android:id="@+id/listClimb"/>
    <ListView
            android:layout_width="match_parent"
            android:layout_height="244dp" android:id="@+id/ave" android:visibility="invisible"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" tools:layout_editor_absoluteX="16dp"
            app:layout_constraintVertical_bias="0.208"/>
    <Button
            android:text="@string/climb"
            android:layout_width="194dp"
            android:layout_height="80dp" android:id="@+id/climb"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="170dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="153dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.584"
            app:layout_constraintVertical_bias="0.588"/>
    <Button
            android:text="@string/walk"
            android:layout_width="194dp"
            android:layout_height="80dp"
            android:id="@+id/step" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="170dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="153dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.584"
            app:layout_constraintVertical_bias="0.825"/>
    <ListView
            android:layout_width="match_parent"
            android:layout_height="630dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/listStep"
            android:visibility="invisible"
            android:stackFromBottom="true"
            android:transcriptMode="alwaysScroll" android:layout_marginBottom="8dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.635"/>

</android.support.constraint.ConstraintLayout>