<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <TextView
            android:layout_width="317dp"
            android:layout_height="154dp"
            android:text="@string/get_ready"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.154"
            app:layout_constraintHorizontal_bias="0.446" android:gravity="center" android:textSize="18sp"
            android:id="@+id/text1"/>
    <TextView
            android:layout_width="149dp"
            android:layout_height="90dp"
            android:text="climb"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.379"
            app:layout_constraintHorizontal_bias="0.16" android:gravity="center" android:textSize="30sp"
            android:id="@+id/climbCount"/>
    <TextView
            android:layout_width="149dp"
            android:layout_height="90dp"
            android:text="step"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.379"
            app:layout_constraintHorizontal_bias="0.801" android:gravity="center" android:textSize="30sp"
            android:id="@+id/stepCount"/>
    <Button
            android:text="@string/climb"
            android:layout_width="194dp"
            android:layout_height="80dp" android:id="@+id/climb"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="170dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="153dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.584"
            app:layout_constraintVertical_bias="0.588"/>
    <Button
            android:text="@string/walk"
            android:layout_width="194dp"
            android:layout_height="80dp"
            android:id="@+id/step" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="170dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="153dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.584"
            app:layout_constraintVertical_bias="0.825"/>
    <ListView
            android:layout_width="match_parent"
            android:layout_height="757dp"
            android:layout_marginTop="21dp"
            app:layout_constraintTop_toBottomOf="@+id/text1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/list"
            android:visibility="invisible"
            android:stackFromBottom="true"
            android:transcriptMode="alwaysScroll"/>
    <TextView
            android:text="Steps: 0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/pedo" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.688"/>

</android.support.constraint.ConstraintLayout>